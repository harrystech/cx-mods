{
  "name": "CX Mods",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Mods for CX",
  "homepage_url": "https://github.com/babbins/cx-mods",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Popup",
    "default_popup": "src/popup/popup.html"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.harrys.com/*"
      ],
      "css": [
        "src/inject/content.css"
      ]
    },
    {
      "matches": [
        "https://www.harrys.com/*"
      ],
      "js": [
        "src/inject/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "src/inject/*.js",
    "src/inject/**/*",
    "src/shared/*"
  ]
}
