{
  "name": "CX Mods",
  "version": "3.0.0",
  "manifest_version": 3,
  "description": "Mods for CX",
  "homepage_url": "https://github.com/babbins/cx-mods",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "service_worker": "src/bg/background.html"
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Popup",
    "default_popup": "src/popup/popup.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.harrys.com/*"],
      "css": ["src/inject/content.css"]
    },
    {
      "matches": ["https://www.harrys.com/*"],
      "js": ["src/inject/content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["src/**/*"],
    "matches": ["https://www.harrys.com/*", "http://localhost/*"]
  }]
}
